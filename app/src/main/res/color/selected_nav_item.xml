<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:color="@color/yellow" android:state_checked="true" />

    <!-- Unchecked state -->
    <item android:color="@color/blue" android:state_checked="false" android:state_enabled="true" />

    <!-- Disabled state -->
    <item android:color="@color/grey" android:state_enabled="false" />
</selector>